extends ../layout

block content
  .col-sm-8.col-sm-offset-2
    form(method='POST')
      legend Şifre Değişikliği
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        p E-Mailinizi giriniz, size şifre güncelleme için gerekli bilgileri göndereceğiz.
        label.control-label(for='email') E-Posta
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
      .form-group
        button.btn.btn-primary(type='submit')
          i.fa.fa-key
          | Şifreyi Sıfırla
