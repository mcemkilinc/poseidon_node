extends ../layout

block content
  h3 Kişisel Bilgiler
  nav(aria-label='Page navigation')
    ul.pagination
      li
        a(href='#', aria-label='Previous')
          span(aria-hidden='true') «
      li
        a(href='#') 1
      li
        a(href='#') 2
      li
        a(href='#') 3
      li
        a(href='#') 4
      li
        a(href='#') 5
      li
        a(href='#', aria-label='Next')
          span(aria-hidden='true') »
  form.form-horizontal(id='userForm',action='/account/profile2', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='profile_form_id', value=2)
    .form-group
      label.col-sm-3.control-label(for='TCKN') Tc Kimlik No
      .col-sm-7
        input.form-control(readonly,type='number',min="10000000000",max="99999999999" name='TCKN', id='TCKN', value='#{user.profile.TCKN}')
    .form-group
      label.col-sm-3.control-label(for='Bolge') Bölge
      .col-sm-7
        input.form-control(readonly,type='Bolge', name='Bolge', id='Bolge', value='#{user.profile.Bolge}')
    .form-group
      label.col-sm-3.control-label(for='Sube') Şube
      .col-sm-7
        input.form-control(readonly,type='Sube', name='Sube', id='Sube', value='#{user.profile.Sube}')
    .form-group
      label.col-sm-3.control-label(for='Organisation') Organizasyon
      .col-sm-7
        input.form-control(readonly,type='Organisation', name='Organisation', id='Organisation', value='#{user.profile.Organisation}')
    .form-group
      label.col-sm-3.control-label(for='HomePhone') Ev Telefonu
      .col-sm-7
        input.form-control(type='tel', name='HomePhone', id='HomePhone', value='#{user.profile.HomePhone}')
    .form-group
      label.col-sm-3.control-label(for='SpecialAlert') Özel Uyarı
      .col-sm-7
        input.form-control(type='text', name='SpecialAlert', id='SpecialAlert', value='#{user.profile.SpecialAlert}')
    .form-group
      label.col-sm-3.control-label(for='DeviceType') Alet İşletim Sistemi
      .col-sm-4
        label.radio.col-sm-4
          input(type='radio', checked=user.profile.DeviceType == 'Android', name='DeviceType', value='Android', data-toggle='radio')
          span Android
        label.radio.col-sm-4
          input(type='radio', checked=user.profile.DeviceType == 'iPhone', name='DeviceType', value='iPhone', data-toggle='radio')
          span iPhone
        label.radio.col-sm-4
          input(type='radio', checked=user.profile.DeviceType == 'Windows Phone', name='DeviceType', value='Windows Phone', data-toggle='radio')
          span Windows Phone
    .form-group
      label.col-sm-3.control-label(for='BloodType') Kan Grubu
      .col-sm-7
        input.form-control(type='text', name='BloodType', id='BloodType', value='#{user.profile.BloodType}')
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fa.fa-pencil
          | Profili Güncelle
